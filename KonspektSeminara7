int[,] Generate2DArray(int cntRows, int cntColumns)
{
int[,] array = new int[cntRows, cntColumns];
Random rnd = new Random();
for (int i = 0; i < array.GetLength(0); i++)
{
for (int j = 0; j < array.GetLength(1); j++)
{
array[i, j] = rnd.Next(-10, 11);
}
}
return array;
}

