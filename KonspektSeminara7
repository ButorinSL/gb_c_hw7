int[,] SquareEvens(int[,] array)
{
for (int i = 1; i < array.GetLength(0); i+=2)
{
for (int j = 1; j < array.GetLength(1); j+=2)
{
{
array[i, j] *= array[i, j];
}
}
}
return array;
}

